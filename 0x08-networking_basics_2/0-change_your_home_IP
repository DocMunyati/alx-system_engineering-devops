#!/bin/bash

# Save the current /etc/hosts file to a backup file
sudo cp /etc/hosts /etc/hosts.bak

# Create a new /etc/hosts file with the desired mappings
sudo echo "127.0.0.2 localhost" > /etc/hosts
sudo echo "8.8.8.8 facebook.com" >> /etc/hosts

# Append the original contents of /etc/hosts to the new file
sudo cat /etc/hosts.bak >> /etc/hosts

# Remove the backup file
sudo rm /etc/hosts.bak
